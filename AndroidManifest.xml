<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.university.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.WRITE_SMS" />

    <application android:debuggable="true" android:icon="@drawable/ic_blue" android:label="@string/app_name" >
        <activity android:label="@string/app_name" android:name="MainActivity">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name=".HelpActivity"/>
        <activity android:label="@string/app_name" android:name=".ShowSmsActivity"/>
        <activity android:label="@string/app_name" android:name=".SendActivity"/>
        <activity android:label="@string/app_name" android:name=".PublicKeyActivity"/>
    </application>

</manifest>